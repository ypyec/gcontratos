{{extend 'layout.html'}}

<h1>Nuevo Contrato Persona</h1>
<form>
    <div class="row">
        <div class="col-xs-12 col-md-6" style="width: 49%; float: left;">
            <fieldset>
                <legend>Datos Personales:</legend>
                <div class="form-group">
                    <label for="txtNombres">Nombres</label>
                    <input type="text" class="form-control" id="txtNombres" placeholder="Nombres completos">
                </div>
                <div class="form-group">
                    <label for="txtApellidos">Apellidos</label>
                    <input type="text" class="form-control" id="txtApellidos" placeholder="Apellidos completos">
                </div>
                <div class="form-group">
                    <label for="txtCedula">Documento de Identidad</label>
                    <input type="number" class="form-control" id="txtCedula" placeholder="Documento de identidad">
                </div>
                <div class="form-group">
                    <label for="txtTelefono">Telefono</label>
                    <input type="phone" class="form-control" id="txtTelefono" placeholder="Telefono">
                </div>
                <div class="form-group">
                    <label for="txtProfesion">Profesion</label>
                    <input type="text" class="form-control" id="txtProfesion" placeholder="Profesion">
                </div>
                <div class="form-group">
                    <label for="txtExperiencia">Experiencia</label>
                    <textarea id="txtExperiencia" class="form-control" rows="3"></textarea>
                </div>
                <fieldset>
                    <legend>
                        Domicilio Personal
                    </legend>
                    <div class="form-group">
                        <label for="txtDireccion">Direccion</label>
                        <input type="text" class="form-control" id="txtDireccion" placeholder="Direccion">
                    </div>
                    <div class="form-group">
                        <label for="txtCiudad">Ciudad</label>
                        <input type="text" class="form-control" id="txtCiudad" placeholder="Ciudad">
                    </div>
                    <div class="form-group">
                        <label for="txtPais">Pais</label>
                        <input type="text" class="form-control" id="txtPais" placeholder="Pais">
                    </div>
                </fieldset>
            </fieldset>
            <fieldset>
                <legend>
                    Datos Bancarios
                </legend>
                <div class="form-group">
                    <label for="txtNombreBanco">Nombre del Banco</label>
                    <input type="text" class="form-control" id="txtNombreBanco" placeholder="Nombre del Banco">
                </div>
                <div class="form-group">
                    <label for="txtCuentaBanco">Numero de Cuenta</label>
                    <input type="number" class="form-control" id="txtCuentaBanco" placeholder="Documento de identidad">
                </div>
                <div class="radio">
                    <label>
                        <input type="radio" name="tipoBanco" id="rbnNacional" value="nacional">
                        Nacional
                    </label>
                </div>
                <div class="radio">
                    <label>
                        <input type="radio" name="tipoBanco" id="rbnInternacional" value="internacional" checked>
                        Internacional
                    </label>
                </div>
            </fieldset>
        </div>
        <div class="col-xs-12 col-md-6" style="width: 49%; float: right">
            <fieldset>
                <legend>Objeto:</legend>
                <div class="form-group">
                    <label for="txtNombreConsultoria">Nombre Consultoría</label>
                    <input type="text" class="form-control" id="txtNombreConsultoria" placeholder="Nombre Consultoria">
                </div>
                <div class="form-group">
                    <label for="txtDescripcion">Descripcion</label>
                    <textarea id="txtDescripcion" class="form-control" rows="3"></textarea>
                </div>
                <fieldset>
                    <legend>
                        Obligaciones adicionales:
                    </legend>
                    <div class="radio">
                        <label>
                            <input type="radio" name="obligaciones" id="rbnExiste" value="si">
                            Existen
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="obligaciones" id="rbnNoExiste" value="no" checked>
                            No Existen
                        </label>
                    </div>
                </fieldset>
            </fieldset>
            <fieldset>
                <legend>
                    Duración y Honorarios
                </legend>
                <div class="form-group">
                    <label for="txtFechaInicio">Fecha de Inicio</label>
                    <input type="date" class="form-control" id="txtFechaInicio">
                </div>
                <div class="form-group">
                    <label for="txtFechaFin">Fecha de Fin</label>
                    <input type="date" class="form-control" id="txtFechaFin">
                </div>
            </fieldset>
        </div>
    </div>
</form>
